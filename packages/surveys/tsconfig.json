{
  "extends": "@formbricks/tsconfig/js-library.json",
  "include": ["src", "sideload"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
