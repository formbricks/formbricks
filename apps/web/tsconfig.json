{
  "extends": "@formbricks/tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/types/*.d.ts",
    "../../packages/lib/jwt.ts",
    "../../packages/ee/RoleManagement/components/EditMembershipRole.tsx"
  ],
  "exclude": ["../../.env"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@prisma/client/*": ["@formbricks/database/client/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  }
}
